{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "noEmit": false,
    "moduleResolution": "node",
    "isolatedModules": true // This ensures that .tsx files are treated as isolated modules.
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
